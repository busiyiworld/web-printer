{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "**/src/**/*.ts",
  ],
  "exclude": [
    "**/dist/*"
  ]
}