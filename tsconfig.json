{
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}